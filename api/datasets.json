---
layout: null
permalink: /api/datasets.json
---
[
{% assign items = site.datasets %}
{% for d in items %}
  {
    "title": {{ d.title | jsonify }},
    "summary": {{ (d.summary | default: d.excerpt | default: "") | strip | jsonify }},
    "url": {{ d.url | relative_url | jsonify }},
    "links": [
      {% assign links = d.links | default: empty %}
      {% for L in links %}
        { "href": {{ L.href | jsonify }}, "text": {{ L.text | default: L.href | jsonify }} }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
JSON
